# General
shell = /bin/zsh                # or /bin/bash or your preferred shell
working-directory = ~/          # Start in home directory

# Performance & Rendering
renderer = opengl               # Use GPU for rendering (default and fastest)
optimize-rendering = true       # Ghostty-specific rendering optimization
gpu-synchronize = false         # Disable frame sync to minimize latency

# Font
font-family = JetBrainsMonoNL   # Replace with your favorite Nerd Font
font-size = 14.0                # Comfortable size for coding
font-bold = true
font-antialias = true
font-ligatures = true           # Great with Neovim LSPs, treesitter, etc.

# Colors & Theme
color-scheme = "tokyo-night"   # Built-in theme (change to your liking)
background-opacity = 0.95      # Slight transparency (optional)

# Padding
padding-x = 10
padding-y = 10

# Scrollback
scrollback-size = 100000       # Big scrollback for debugging, logs, etc.
scrollback-persist = true

# Cursor
cursor-shape = block
cursor-blink = false           # No distraction
cursor-color = #ffcc00

# Keybindings
keymap = default               # Stick with defaults or customize if needed

# Mouse
mouse-hide-while-typing = true

# Neovim Enhancements
defer-drawing = true           # Improves performance with frequent redraws




